{
  "name": "soundpad-pro",
  "version": "2.9.0",
  "description": "Professional soundboard for streamers with controller support",
  "main": "main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3005",
    "dev:electron": "wait-on http://localhost:3005 && cross-env ELECTRON=true electron .",
    "build": "next build",
    "build:win": "npm run build && electron-builder --win --config .electron-builder.config.js",
    "build:win:portable": "npm run build && electron-builder --win portable --config .electron-builder.config.js",
    "build:deploy": "npm run build:win && powershell -ExecutionPolicy Bypass -File create-desktop-shortcut.ps1 -Force",
    "shortcut": "powershell -ExecutionPolicy Bypass -File create-desktop-shortcut.ps1",
    "start": "electron simple-main.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "soundboard",
    "electron",
    "streaming",
    "controller"
  ],
  "author": "SoundPad Pro",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "howler": "^2.2.4",
    "next": "^14.0.0",
    "obs-websocket-js": "^5.0.6",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/howler": "^2.2.8",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  }
}
