{
  "name": "soundpad-pro",
  "version": "2.0.0",
  "description": "Professional soundboard for streamers with controller support",
  "main": "main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3005",
    "dev:electron": "wait-on http://localhost:3005 && cross-env ELECTRON=true electron .",
    "build": "next build",
    "build:win": "electron-builder --win",
    "start": "electron simple-main.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "soundboard",
    "electron",
    "streaming",
    "controller"
  ],
  "author": "SoundPad Pro",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "howler": "^2.2.4",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/howler": "^2.2.8",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.soundpadpro.app",
    "productName": "SoundPad Pro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main/**/*",
      "out/**/*",
      "package.json",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.md",
      "!node_modules/**/*.map",
      "!node_modules/**/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SoundPad Pro",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "compression": "maximum",
    "npmRebuild": false,
    "nodeGypRebuild": false
  }
}
